<div class="container">
  <ul class="breadcrumb" style="clear: both; margin-left: 0">
    <li><%= link_to('Your Address Books', address_books_url) -%> <span class="divider">/</span></li>
    <li><%= link_to(@address_book.name, address_book_url(@address_book)) %> <span class="divider">/</span></li>
    <li class="active">New Contact</li>
  </ul>

	<h2>Contact for &ldquo;<%= @address_book.name -%>&rdquo;</h2>

	<%= form_for([@address_book, @contact]) do |f| %>
    <%= render 'form', :f => f %>
    <div>
      <%= f.submit "Create", :class => 'btn' -%>
    </div>
  <% end -%>
</div>
