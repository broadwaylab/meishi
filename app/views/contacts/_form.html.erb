<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th colspan="3">Field</th>
      <th>Value</th>
    </tr>
  </thead>
  <tbody>
    <%= f.fields_for :fields do |builder| %>
      <%= render "field_fields", :f => builder %>
    <% end -%>
  </tbody>
</table>

<div>
  <p>
    <%= link_to_add_fields "Add Field", f, :fields %>
  </p>
</div>
