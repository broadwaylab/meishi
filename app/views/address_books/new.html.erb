<div class='container'>

  <ul class="breadcrumb">
    <li><%= link_to('Your Address Books', address_books_url) -%> <span class="divider">/</span></li>
    <li class="active">New Address Book</li>
  </ul>

  <legend><h2>New Address Book</h2></legend>

  <%= form_for(@address_book, :html => { :class => 'form-horizontal' }) do |f| %>
    <fieldset>
      <%= render 'form', :f => f %>
      <div class='control-group'>
        <%= f.submit 'Create', :class => 'btn' %>
      </div>
    </fieldset>
  <% end -%>

</div>
