<div class='container'>
  <ul class='breadcrumb' style='visibility: hidden'>
    <li>...</li>
  </ul>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-horizontal' }) do |f| %>
    <%= devise_error_messages! %>

    <fieldset>
      <div id='legend'>
        <legend><h2>Edit Account Information</h2></legend>
      </div>

      <div class='control-group'>
        <%= f.label :email, :class => 'control-label' %>
        <div class='controls'>
          <%= f.email_field :email, :class => 'input-xlarge' %>
        </div>
      </div>

      <div class='control-group'>
        <%= f.label :password, :class => 'control-label' %>
        <div class='controls'>
          <%= f.password_field :password, :autocomplete => 'off', :class => 'input-xlarge' %>
          <p class='help-block'>Leave blank if you don't want to change it</p>
        </div>
      </div>

      <div class='control-group'>
        <%= f.label :password_confirmation, :class => 'control-label' %>
        <div class='controls'>
          <%= f.password_field :password_confirmation, :autocomplete => 'off', :class => 'input-xlarge' %>
        </div>
      </div>

      <div class='control-group'>
        <%= f.label :current_password, :class => 'control-label' %>
        <div class='controls'>
          <%= f.password_field :current_password, :autocomplete => 'off', :class => 'input-xlarge' %>
          <p class='help-block'>We need your current password to confirm your changes</p>
        </div>
      </div>

      <div class='control-group'>
        <div class='controls'>
          <%= f.submit 'Update', :class => 'btn' %>
        </div>
      </div>

    </fieldset>

  <% end %>

  <p>Unhappy? <%= link_to 'Cancel my account', registration_path(resource_name), :confirm => 'Are you sure?', :method => :delete %>.</p>

</div>
